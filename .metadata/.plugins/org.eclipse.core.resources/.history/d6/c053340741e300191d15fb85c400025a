package com.bridgelabz.functional;

import com.bridgelabz.utility.Utility;

public class ArrayOutputStream {

	public static void main(String[] args) 
	{
		int arr[][]=new int [3][3];
		int row,column,i,j;
		System.out.println("Enter the row values:");
		row=Utility.getInteger();
		System.out.println("Enter the column value:");
		column=Utility.getInteger();
		System.out.println("Enter"+" "+row*column+" "+"is:");
		for(i=0;i<row;i++)
		{
			for(j=0;j<column;j++)
			{
				System.out.print("Enter the value:");
				arr[i][j]=Utility.getInteger();
				
			}
		}
		System.out.println("Matrics:");
		for(i=0;i<row;i++)
		{
			for(j=0;j<column;j++)
			{
				System.out.print(" "+arr[i][j]);
			}
			System.out.println();
		}
	}

}
