package com.bridgelabz.functional;

public class Gambler 
{

	public static void main(String[] args) 
	{
		int $stake=5;
		int $goal=5;
		int Trials=5;
		int bats=0;
		int wins=0;
		int cash=$stake;
		for(int number=1;number<Trials;number++)
		{
			while(cash>0&&cash<$goal)
			{
			 if(Math.random()<0.5)
			 {
				 cash++; //won $1
			 }
			 else
			 {
				 cash--;//lose $1
			 }
			 if(cash==0)
				 wins++;
			}
			System.out.println(wins+"Game won"+Trials);
			System.out.println("percent of win"+100.0*wins/Trials);
			System.out.println("Average of wins"+1.0*wins/Trials);
		}
				
		
	}

}
